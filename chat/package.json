{
  "name": "chat-server",
  "version": "2.0.0",
  "description": "High-performance WebSocket chat server using uWebSockets.js",
  "main": "server-optimized.js",
  "type": "module",
  "scripts": {
    "prestart": "node check-node-version.js",
    "start": "node server-optimized.js",
    "start:legacy": "node server.js",
    "predev": "node check-node-version.js",
    "dev": "node --watch server-optimized.js",
    "test": "node --test",
    "check-version": "node check-node-version.js",
    "pm2:start": "pm2 start server-optimized.js --name chat-server",
    "pm2:stop": "pm2 stop chat-server",
    "pm2:restart": "pm2 restart chat-server",
    "pm2:logs": "pm2 logs chat-server"
  },
  "keywords": [
    "websocket",
    "chat",
    "uws",
    "high-performance",
    "realtime"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.6.1",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.48.0"
  },
  "engines": {
    "node": ">=18.0.0 <=22.x"
  }
}
